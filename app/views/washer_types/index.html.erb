<p id="notice"><%= notice %></p>

<h1><%= t('انواع واشر') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('user') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @washer_types.each do |washer_type| %>
      <tr>
        <td><%= washer_type.name %></td>
        <td><%= User.find(washer_type.user_id).name %></td>
        <td><%= link_to t('show'), washer_type %></td>
        <td><%= link_to t('edit'), edit_washer_type_path(washer_type) %></td>
        <td><%= link_to t('destroy'), washer_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

