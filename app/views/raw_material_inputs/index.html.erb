<p id="notice"><%= notice %></p>

<h1><%= t('raw_material_inputs') %></h1>

<%= link_to t('new_record'), new_raw_material_input_path %>

<table class="styled-table">
  <thead>
    <tr>
      <th>Raw material type</th>
      <th>Amount</th>
      <th>Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raw_material_inputs.each do |raw_material_input| %>
      <tr>
        <td><%= RawMaterialType.find(raw_material_input.raw_material_type_id).name %></td>
        <td><%= raw_material_input.amount %></td>
        <td><%= raw_material_input.created_at.to_date.to_pdate %></td>
        <td><%= User.find(raw_material_input.user_id).name %></td>
        <td><%= link_to 'Show', raw_material_input %></td>
        <td><%= link_to 'Edit', edit_raw_material_input_path(raw_material_input) %></td>
        <td><%= link_to 'Destroy', raw_material_input, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


