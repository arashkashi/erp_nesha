<p id="notice"><%= notice %></p>

<h1><%= t('pipe_types', default: "Pipe Types") %></h1>
<hr>

<%= link_to t('new_pipe_type', default: "New Pipe Type"), new_pipe_type_path %>
<hr>

<table class="styled-table">
  <thead>
    <tr>
      <th><%= t('name', default: "Name") %></th>
      <th><%= t('indicator', default: "Indicator") %></th>
      <th><%= t('user', default: "User") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pipe_types.each do |pipe_type| %>
      <tr>
        <td><%= pipe_type.name %></td>
        <td><%= pipe_type.weight %></td>
        <td><%= User.find(pipe_type.user_id).name %></td>
        <td><%= link_to 'Show', pipe_type %></td>
        <td><%= link_to 'Edit', edit_pipe_type_path(pipe_type) %></td>
        <td><%= link_to 'Destroy', pipe_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


