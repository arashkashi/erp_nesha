<p id="notice"><%= notice %></p>

<h1>Pipe Store Inputs</h1>

<table>
  <thead>
    <tr>
      <th>Pipe type</th>
      <th>Amount</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pipe_store_inputs.each do |pipe_store_input| %>
      <tr>
        <td><%= PipeType.find(pipe_store_input.pipe_type_id).name %></td>
        <td><%= pipe_store_input.amount %></td>
        <td><%= User.find(pipe_store_input.user_id).name %></td>
        <td><%= link_to 'Show', pipe_store_input %></td>
        <td><%= link_to 'Edit', edit_pipe_store_input_path(pipe_store_input) %></td>
        <td><%= link_to 'Destroy', pipe_store_input, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

