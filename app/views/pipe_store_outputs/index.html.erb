<p id="notice"><%= notice %></p>

<h1><%= t('pipe_store_outputs', default: "Pipe Store Outputs") %></h1>

<%= link_to t('new_pipe_store_output', default: 'New Pipe Store Output'), new_pipe_store_output_path %>

<table class="styled-table">
  <thead>
    <tr>
      <th><%= t('type', default: "Pipe Type") %></th>
      <th><%= t('amount', default: "Amount")+'-'+ t('meter')%></th>
      <th><%= t('order_item', default: "Order Item") %></th>
      <th><%= t('date', default: "Date") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pipe_store_outputs.each do |pipe_store_output| %>
      <tr>
        <td><%= PipeType.find(pipe_store_output.pipe_type_id).name %></td>
        <td><%= pipe_store_output.amount %></td>
        <% if pipe_store_output.order_item_id %>
        <td><%= link_to OrderItem.find(pipe_store_output.order_item_id).orderItemSignature, OrderItem.find(pipe_store_output.order_item_id) %></td>
        <% else %>
        <td><%= "N/A" %></td>
        <% end %>
        <td><%= pipe_store_output.created_at.to_date.to_pdate %></td>
        <td><%= link_to t('show'), pipe_store_output %></td>
        <td><%= link_to t('edit'), edit_pipe_store_output_path(pipe_store_output) %></td>
        <td><%= link_to t('destroy'), pipe_store_output, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


